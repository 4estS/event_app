<% @events.each do |event| %>
  <div class="card-event" style="border-color:<%= event.category.color %>">
    <!-- Image -->
    <div class="card-event__image-wrapper">
      <%= event_image(event) %>
      <span class="card-event__category" style="background-color:<%= event.category.color %>">Arts & Entertainment</span>
    </div>
    <!-- Title -->
    <h2 class="text-lg font-semibold">
      <%= link_to event.title, event_path(event), class: "hover:underline" %>
    </h2>
    <!-- Content -->
    <div class="card-event__content">
      <p class="card-event__description">
        <%= event.description %>
      </p>
      <!-- Event details -->
      <div class="card-event__details">
        <div class="card-event__detail-item">
          <span>📅</span><span>01-20-2025</span>
        </div>
        <div class="card-event__detail-item">
          <span>⏰</span><span>09:00 PM</span>
        </div>
        <div class="card-event__detail-item">
          <span>📍</span><span><%= event.location_name %></span>
          <p class="mt-2 text-gray-700"><%= event.location %></p>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-1">
        <%= event.event_type&.humanize || "Unknown" %>
      </p>
      <!-- Tags -->
      <div>
        <% if event.tags.any? %>
          <ul class="card-event__tags">
            <% event.tags.each do |tag| %>
              <li><%= tag_badge(tag) %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <!-- Actions -->
      <div class="card-event__actions">
        <button class="card-event__action-button">🤍 Interested</button>
        <button class="card-event__action-button">🚗 Going</button>
        <button class="card-event__action-button">🔗 Share</button>
        <button class="card-event__action-button">💾 Save</button>
      </div>
    </div>
  </div>
<% end %>