<%= turbo_frame_tag dom_id(event) do %>
  <div style="background-color: <%= event.category.color %>;" class="border p-4 rounded shadow-sm">
    <h2 class="text-lg font-semibold">
      <%= link_to event.title, event_path(event), class: "hover:underline" %>
    </h2>
    <p class="text-sm text-gray-500">
      <%= l(event.starts_at) %> â€“ <%= l(event.ends_at) %>
    </p>
    <div class="mt-2 text-gray-700"><%= truncate(event.description, length: 100) %></div>
    <div class="mt-4 flex gap-4">
      <%= link_to "Edit", edit_event_path(event), class: "text-blue-600 hover:underline" %>
      <%= button_to "Delete", event_path(event),
            method: :delete, data: { turbo_confirm: "Are you sure?" },
            class: "text-red-600 hover:underline bg-transparent border-none p-0" %>
    </div>
  </div>
<% end %>