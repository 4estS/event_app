<%= form_with(model: @event, class: "space-y-6") do |f| %>
  <!-- Show status above title -->
  <div>
    <p class="text-sm font-semibold text-gray-500">
      Status: 
      <span class="<%= {
        "draft" => "text-yellow-600",
        "published" => "text-green-600",
        "archived" => "text-gray-500",
        "cancelled" => "text-red-600"
      }[@event.status] %>">
        <%= @event.status.humanize %>
      </span>
    </p>
  </div>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <!-- Address Lookup -->
  <div data-controller="address-lookup" data-address-lookup-access-token-value="<%= ENV['MAPBOX_PUBLIC_KEY'] %>">
    <label class="block font-semibold" for="event_location_name">Location Name</label>
    <%= f.text_field :location_name, class: "w-full border rounded p-2 mb-2" %>

    <label class="block font-semibold" for="address_search">Search Address</label>
    <input
      type="text"
      value="<%= @event.location.presence %>"
      data-address-lookup-target="input"
      data-action="input->address-lookup#search"
      placeholder="e.g. 123 Main St, Springfield, IL"
      class="w-full border rounded p-2"
    >
    <div data-address-lookup-target="suggestions" class="mt-2 space-y-1"></div>
    <%= f.hidden_field :location, id: "event_location" %>
  </div>

  <div>
    <%= f.label :starts_on, "Start Date", class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :starts_on, class: "mt-1 block w-full" %>
  </div>

  <div>
    <%= f.label :starts_at, "Start Time", class: "block text-sm font-medium text-gray-700" %>
    <%= f.time_field :starts_at, class: "mt-1 block w-full" %>
  </div>

  <div>
    <%= f.label :ends_at, "End Time", class: "block text-sm font-medium text-gray-700" %>
    <%= f.time_field :ends_at, class: "mt-1 block w-full" %>
  </div>

  <div>
    <%= f.label :website_url, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :website_url, class: "w-full border rounded p-2 mb-2" %>
  </div>

  <!-- Event Type and Ticket URL -->
  <div data-controller="ticket-url">
    <%= f.label :event_type, "Event Type", class: "block font-medium text-gray-700 mb-2" %>
    <div class="space-y-2 mb-4">
      <% Event.event_types.each_key do |type| %>
        <div class="flex items-center">
          <%= f.radio_button :event_type, type, id: "event_type_#{type}", data: { action: "ticket-url#toggle" } %>
          <%= f.label "event_type_#{type}", type.humanize, class: "ml-2 text-gray-700" %>
        </div>
      <% end %>
    </div>

    <div data-ticket-url-target="ticketUrl" class="<%= f.object.ticket_required? ? '' : 'hidden' %>">
      <%= f.label :ticket_url, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :ticket_url, class: "w-full border rounded p-2 mb-2" %>
    </div>
  </div>

  <div class="mb-4">
    <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :category_id, Category.all, :id, :name,
      { prompt: "Select a category" },
      { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
  </div>

  <div>
    <%= render "tag_selector" %>
  </div>

  <!-- Submit Buttons -->
  <div class="flex gap-4">
    <%= f.submit "Save as Draft", name: "commit", class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    <%= f.submit "Publish", name: "commit", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
  </div>
<% end %>
