<div class="w-screen h-screen flex items-center justify-center bg-slate-500">
  <div class="flex flex-col gap-4 max-w-md p-6 shadow rounded-xl bg-slate-200">
    <h1 class="font-bold text-4xl">Sign Up</h1>
    <p class="text-sm">Users#new - Find me in app/views/users/new.html.erb</p>

    <%= form_with model: @user, class: "space-y-5" do |f| %>
      <div class="pb-4">
        <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email,
              class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400",
              placeholder: "you@email.com" %>
      </div>

      <div class="pb-4" data-controller="password-visibility">
        <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-700" %>
        <div class="relative">
          <%= f.password_field :password,
                class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400",
                placeholder: "Enter Password",
                data: { "password-visibility-target": "input" } %>
          <button type="button"
                  data-action="click->password-visibility#toggle"
                  class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-600 hover:text-slate-900">👁️</button>
        </div>
      </div>

      <div class="pb-4" data-controller="password-visibility">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-slate-700" %>
        <div class="relative">
          <%= f.password_field :password_confirmation,
                class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400",
                placeholder: "Confirm Password",
                data: { "password-visibility-target": "input" } %>
          <button type="button"
                  data-action="click->password-visibility#toggle"
                  class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-600 hover:text-slate-900">👁️</button>
        </div>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
