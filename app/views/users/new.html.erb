
<div class="w-screen h-screen flex items-center justify-center bg-slate-500">
  <div class="flex flex-col gap-4 max-w-md p-6 shadow rounded-xl bg-slate-200">
  <h1 class="font-bold text-4xl">Sign Up</h1>
  <p class="text-sm">Users#new - Find me in app/views/users/new.html.erb</p>
  <%= form_with model: @user, class: "space-y-5" do |f| %>
    <div class="pb-4">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "you@email.com"  %>
    </div>
    <div class="pb-4">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "Password" %>
    </div>
    <div class="pb-4">
    <%= f.label :password_confirmation, class: "col-span-1 block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "block w-full rounded border-2 border-slate-500 p-2 focus:outline-none focus:ring-2 focus:ring-blue-400", placeholder: "Confirm Password" %>
    </div>
    <%= f.submit "Sign Up", class: "btn btn-primary" %>

  <% end %>
</div>
</div>


