

<header class="bg-white shadow dark:bg-gray-800">
  <div class="container mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      
      <!-- Left Side -->
      <div class="flex items-center gap-4">
        <!-- Mobile Menu Button -->
        <button type="button"
                class="lg:hidden text-gray-500 dark:text-gray-200 hover:text-gray-600 dark:hover:text-gray-400 focus:outline-none"
                aria-label="Toggle menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
               viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 8h16M4 16h16" />
          </svg>
        </button>

        <!-- Brand -->
        <div id="brand" class="text-lg font-semibold text-gray-900 dark:text-white">
          <%= link_to "MyApp", root_path %>
        </div>

        <!-- Search (desktop only) -->
        <div class="hidden md:block w-64">
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="none">
                <path d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.134 17 3 13.866 3 10C3 6.134 6.134 3 10 3C13.866 3 17 6.134 17 10Z"
                      stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </span>
            <input type="text"
                   class="w-full py-2 pl-10 pr-4 text-sm text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40 focus:ring-blue-300"
                   placeholder="Search">
          </div>
        </div>
      </div>

      <!-- Right Side -->
      <div class="flex items-center gap-4">
        <%= link_to "Sign In", "#",
              class: "btn btn-ghost" %>

        <%= link_to "Sign up", new_user_path, class: "btn btn-secondary" %>

        <button data-controller="theme" data-action="click->theme#toggle"
                class="btn btn-primary">
          Toggle Theme
        </button>
      </div>

    </div>
  </div>
</header>
