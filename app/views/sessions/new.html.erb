<div class="w-screen h-screen flex items-center justify-center bg-slate-500">
  <div class="flex flex-col gap-4 max-w-md p-6 shadow rounded-xl bg-slate-200">
    <h1 class="font-bold text-4xl">Sign In</h1>
    <p class="text-sm">Sessions#new - Find me in app/views/sessions/new.html.erb</p>

    <%= form_with url: sign_in_path, method: :post do %>
      <div class="pb-4">
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-slate-700" %>
        <%= email_field_tag :email, nil,
              class: "block w-full rounded border-2 border-slate-500 p-2
                      focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="pb-4" data-controller="password-visibility">
        <%= label_tag :password, "Password", class: "block text-sm font-medium text-slate-700" %>

        <div class="relative">
          <%= password_field_tag :password, nil,
                class: "block w-full rounded border-2 border-slate-500 p-2
                        focus:outline-none focus:ring-2 focus:ring-blue-400",
                data: { "password-visibility-target": "input" } %>

          <button type="button"
                  data-action="click->password-visibility#toggle"
                  class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-600 hover:text-slate-900">
            ğŸ‘ï¸
          </button>
        </div>
      </div>

      <div class="pb-4 flex items-center gap-2">
        <%= check_box_tag :remember_me, "1", false,
              class: "h-4 w-4 rounded border-slate-400 text-blue-600 focus:ring-blue-500" %>
        <%= label_tag :remember_me, "Remember me", class: "text-sm text-slate-700" %>
      </div>

      <%= submit_tag "Log in",
            class: "w-full rounded-lg bg-blue-600 px-4 py-2 text-white font-semibold
                    hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    <% end %>
  </div>
</div>